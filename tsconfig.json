{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "@/*": ["iframe-content/src/*"],
      "@lib/*": ["iframe-content/lib/*"],
      "@shared/*": ["shared/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "web-sdk/**/*",
    "iframe-content/**/*",
    "shared/**/*",
    "vite.config.iframe.ts",
    "vite.config.sdk.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
